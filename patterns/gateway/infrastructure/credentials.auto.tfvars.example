# ThreeFold Grid Gateway Configuration
# Copy this file to credentials.auto.tfvars and fill in your values

# ThreeFold Grid Network
tfgrid_network = "main"  # Options: main, test, dev

# Node IDs from ThreeFold Grid (find these on the ThreeFold Grid Explorer)
gateway_node = 1000   # Node ID for the gateway VM (must have public IPv4 capability)
internal_nodes = [2000, 2001]  # Node IDs for internal VMs (IPv6-only)

# VM Specifications
# Gateway VM (with public IPv4)
gateway_cpu = 2
gateway_mem = 4096   # 4GB RAM
gateway_disk = 50    # 50GB storage

# Internal VMs (IPv6-only, no public IPv4)
internal_cpu = 2
internal_mem = 2048   # 2GB RAM
internal_disk = 25    # 25GB storage

# Optional: Specify SSH key (if not set, will auto-detect ~/.ssh/id_ed25519.pub or ~/.ssh/id_rsa.pub)
# SSH_KEY = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI..."