##############################################################
# K3s Kubernetes Cluster Configuration
##############################################################

#############################################################
# Node IDs
#############################################################

management_node = 1000  # Only 1 node
control_nodes = [1,2,3]  # Can be 1 or more
worker_nodes  = [4,5,6]  # Can be 1 or more

# Optional: Dedicated ingress nodes with public IPs for HA ingress
# If empty or omitted, Nginx Ingress runs on workers (simpler setup)
# If populated, enables dedicated ingress tier with Keepalived VRRP failover
ingress_nodes = []  # e.g. [7,8] for 2 dedicated ingress nodes

#############################################################
# Network
#############################################################

# ThreeFold Grid network (main or test)
tfgrid_network = "main"  # Network to deploy on (main for production, test for testing)

# Network name for the cluster
network_name = "k3s_cluster_net"  # Name of the network for the cluster

#############################################################
# DEPLOYMENT SIZE CONFIGURATIONS
#############################################################

# Management node specifications (defaults provided in main.tf)
management_cpu = 1      # vCPU for management node
management_mem = 2048   # MB RAM for management node (2 GB)
management_disk = 25    # GB SSD for management node

control_cpu = 4      # vCPU for control plane nodes
control_mem = 8192   # MB RAM for control plane nodes (8 GB)
control_disk = 100   # GB SSD for control plane nodes

worker_cpu = 8       # vCPU for worker nodes
worker_mem = 16384   # MB RAM for worker nodes (16 GB)
worker_disk = 250    # GB SSD for worker nodes

# Ingress node specifications (only used if ingress_nodes is populated)
# ingress_cpu = 2      # vCPU for ingress nodes (default: 2)
# ingress_mem = 4096   # MB RAM for ingress nodes (default: 4GB)
# ingress_disk = 25    # GB SSD for ingress nodes (default: 25GB)

#############################################################
# IPv4
#############################################################

# Optional: Set to false to deploy worker nodes without public IPv4 addresses
# worker_public_ipv4 = true  # Default is true

#############################################################
# SSH KEYS
#############################################################

# Your SSH public key (leave commented out to auto-detect)
# SSH_KEY = "ssh-rsa AAAAB3NzaC1yc2E..."
# When the line above is commented out, system will check for keys in this order:
# 1. ~/.ssh/id_ed25519.pub
# 2. ~/.ssh/id_rsa.pub